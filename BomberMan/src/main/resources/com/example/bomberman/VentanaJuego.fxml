<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bomberman.control.VentanaJuegoController">

    <children>
        <Canvas fx:id="canvas" focusTraversable="true" height="1920" layoutX="0" layoutY="0" width="1080" />

        <!-- Contenedor para el Label -->
        <Pane layoutX="550" layoutY="10" prefWidth="170" prefHeight="40" style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 2px;">
            <!-- Label para mostrar la gasolina -->
            <Label fx:id="labelGasolina" text="Gasolina: " style="-fx-font-size: 18px; -fx-text-fill: black;" />
        </Pane>

        <!-- Botón para mostrar el camino -->
        <Button text="¿Mostrar camino (-20 de Gasolina)?" layoutX="550" layoutY="60" onAction="#handleMostrarCaminoClick" />

    </children>
</AnchorPane>

